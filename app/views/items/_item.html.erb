<div class="row well-white container">
  <div class="col-sm-10">
    <h2 class="text-muted">
      <%= @item.name %>
      <small>
        $<%= @item.price %>
      </small>
    </h2>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <%= image_tag(@item.image.url(:display), class: :square) if @item.image? %>
      <div class="room-on-top">
        <% if @cart %>
          <%= add_or_remove_image_from_cart_button(@item, 'btn btn-primary btn-sm') %>
        <% end %>
        <% if policy(@item).archive? %>
          <%= link_to "Archive", archive_item_path(@item), method: :post, data: { confirm: 'Are you sure you want to archive this item?' }, class: 'btn btn-warning btn-sm' %>
          <%= link_to "Edit", edit_item_path(@item), class: 'btn btn-default btn-sm' %>
          <%= link_to "Delete", @item, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: 'btn btn-danger btn-sm' %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-7">
      <h5 class="text-muted">
        <%= markdown_to_html(@item.description) %>
      </h5>
    </div>
  </div>
</div>
