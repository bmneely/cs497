<div class="row well-white">
  <div class="col-sm-10">
    <h2 class="text-muted"><%= @item.name %> <small>$<%= @item.price %></small></h2>
    <%= image_tag(@item.image.url, class: :square) if @item.image? %>
    <div class="divider"></div>
    <div class="row">
      <div class="col-sm-7">
        <h5 class="text-muted">
          <%= markdown_to_html(@item.description) %>
        </h5>
      </div>
      <div class="col-sm-3">
        <h5 class="text-muted">
          <%= link_to "Add to Cart &nbsp; #{ fa_icon('shopping-cart') }".html_safe, "#",  class: 'btn btn-default btn-block room-on-top' %>
        </h5>
      </div>
    </div>
  </div>
</div>
