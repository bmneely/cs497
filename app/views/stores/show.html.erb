<div class="row well-white">
  <div class="col-sm-10">
    <h1 class="center-my-children">
      <%= @store.name %>
    </h1>
    <%= image_tag(@store.storefront.url, class: :wide) if @store.storefront? %>
    <div class="divider"></div>
    <h5 class="text-muted">
      <%= @store.description %>
    </h5>
    <div class="divider"></div>
    <h1>
      Items <small><%= link_to "#{ fa_icon('plus') }".html_safe, new_store_item_path(@store) %></small>
    </h1>
    <% @store.items.each do |item| %>
      <%= render partial: 'items/item_preview', locals: {item: item} %>
    <% end %>
  </div>
  <%= render 'stores/side_bar' %>
</div>
