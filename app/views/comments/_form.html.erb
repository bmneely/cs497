<%= form_for [item, comment], remote: :true, html: {class: 'form-inline room-on-bottom'} do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment here!", size: 80 %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit Comment", class: 'btn btn-default' %>
  </div>
<% end %>
