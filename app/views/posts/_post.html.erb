<h2>
  <%= @post.title %>
  <% if policy(@post.blog).update? %>
    <%= link_to "Edit Post", edit_blog_post_path(@post.blog, @post), class: 'btn btn-sm btn-success' %>
    <%= link_to "Delete Post", [@post.blog, @post], method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
  <% end %>
  <div>
    <small>
      submitted <%= time_ago_in_words(@post.created_at) %> ago
    </small>
  </div>
</h2>
<div class="row">
  <div class="col-md-12">
    <p><%= markdown_to_html @post.body %></p>
  </div>
</div>
