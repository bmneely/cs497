<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, blog_post_path(@blog, post) %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(post.created_at) %> ago <br \>
      <%= post.comments.count %> Comments
    </small>
  </div>
</div>
