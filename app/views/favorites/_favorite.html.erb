<% if favorite = current_user.favorite_for(store) %>
  <%= link_to [store, favorite], class: 'btn btn-block', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
  <% end %>
<% else %>
  <%= link_to [store, Favorite.new], class: 'btn btn-block', method: :post do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
  <% end %>
<% end %>
